#!/usr/bin/env bash

export PANE_FILE="/tmp/peco-glimpse-$$.pane"

function on_exit() {
    local pane_id="$([[ -f "${PANE_FILE}" ]] && cat "${PANE_FILE}")"
    if [[ (-n "${pane_id}") && -n "$( tmux list-pane | grep "${pane_id}")" ]] ; then
        tmux kill-pane -t "${pane_id}"
    fi
}
trap on_exit EXIT

rg --vimgrep "${@}" | peco
